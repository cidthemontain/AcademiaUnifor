<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E1FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Criar Treino"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de nome do aluno -->

        <!-- Campo grupo muscular -->
        <Button
            android:id="@+id/btnSelecionarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#222222"
            android:text="Selecionar Aluno" />

        <EditText
            android:id="@+id/editGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Grupo Muscular"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Campo exercício -->
        <EditText
            android:id="@+id/editExercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exercício"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Botão adicionar exercício -->
        <Button
            android:id="@+id/btnAdicionarExercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Exercício"
            android:backgroundTint="#222222"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Lista dos exercícios adicionados -->
        <TextView
            android:id="@+id/textExercicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercícios:"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Botão salvar -->
        <Button
            android:id="@+id/btnSalvarTreino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Treino"
            android:backgroundTint="#273F98"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
